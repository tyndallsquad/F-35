<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- ELT -->
<PropertyList>

  <path>elt.ac</path>

  <animation>
    <object-name>support</object-name>
    <object-name>ELT.led</object-name>
    <object-name>ELT.switch</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>support</object-name>
    <object-name>ELT.led</object-name>
    <object-name>ELT.switch</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>support</object-name>
    <object-name>ELT.switch</object-name>
    <condition>
      <property>controls/lighting/instrument-lights</property>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>/controls/switches/flood-lights-norm</factor-prop>
      <red>   0.2 </red>
      <green> 0.2 </green>
      <blue>  0.2 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>ELT.switch</object-name>
    <property>controls/switches/elt</property>
    <factor> 30 </factor>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>ELT.switch</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>controls/switches/elt</property>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>controls/lighting/elt</property>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/sound/switch</property>
      </binding>
    </action>
  </animation>

  <animation>
    <type>material</type>
    <object-name>ELT.led</object-name>
    <emission>
      <red>   2 </red>
      <green> 0 </green>
      <blue>  0 </blue>
    </emission>
    <condition>
      <or>
        <equals>
          <property>controls/lighting/elt</property>
          <value>0</value>
        </equals>
        <and>
          <property>sim/model/lights/elt/state</property>
          <equals>
            <property>controls/lighting/elt</property>
            <value>1</value>
          </equals>
        </and>
      </or>
    </condition>
  </animation>

</PropertyList>
