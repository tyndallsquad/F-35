<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>whitelight.ac</path>

  <animation>
    <object-name>support</object-name>
    <object-name>light</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>support</object-name>
    <object-name>light</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>light</object-name>
    <emission>
      <red>   2 </red>
      <green> 2 </green>
      <blue>  2 </blue>
    </emission>
    <condition>
      <and>
        <greater-than>
          <property>surface-positions/flaps-pos-norm</property>
          <value type="double">0.15</value>
        </greater-than>
        <less-than>
          <property>surface-positions/flaps-pos-norm</property>
          <value type="double">0.75</value>
        </less-than>
        <property>controls/electric/battery-switch</property>
      </and>
    </condition>
  </animation>

</PropertyList>
