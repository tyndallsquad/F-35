<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>trimwheel.ac</path>

  <animation>
    <object-name>TrimWheel</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>TrimWheel</object-name>
  </animation>

  <animation>
    <type>knob</type>
    <drag-direction>vertical</drag-direction>
    <object-name>TrimWheel</object-name>
    <value>0.0</value>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>/controls/flight/elevator-trim</property>
        <min>-1</min>
        <max> 1</max>
        <factor>0.001</factor>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrimWheel</object-name>
    <property>/controls/flight/elevator-trim</property>
    <interpolation>
      <entry><ind> -1 </ind><dep> -37 </dep></entry>
      <entry><ind>  0 </ind><dep>   0 </dep></entry>
      <entry><ind>  1 </ind><dep>  37 </dep></entry>
    </interpolation>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
